<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="mainVB" alignment="CENTER" xmlns="http://javafx.com/javafx/1" xmlns:fx="http://javafx.com/fxml/" fx:controller="ru.geekbrains.controller.chatController">
    <children>
        <TextArea fx:id="msgTA" editable="false" prefHeight="246.0" prefWidth="273.0" wrapText="true" VBox.vgrow="ALWAYS" focusTraversable="false"/>
        <HBox id="bottomHB" prefHeight="0.0" prefWidth="200.0" spacing="5.0">
            <children>
                <TextField fx:id="inputTF" HBox.hgrow="ALWAYS" onAction="#sendMessage"/>
                <Button id="sendBT" mnemonicParsing="false" prefHeight="25.0" prefWidth="79.0" text="Отправить" HBox.hgrow="ALWAYS" onAction="#sendMessage" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </children>
    <padding>
      <Insets left="2.0" right="2.0" top="2.0" />
   </padding>
</VBox>
